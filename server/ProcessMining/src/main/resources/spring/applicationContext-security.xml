
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:security="http://www.springframework.org/schema/security"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">

    <security:http pattern="/loginPage" security="none"/>
    <security:http pattern="/js/**" security="none"/>
    <security:http pattern="/home/login" security="none"/>
    <security:http pattern="/html/login.html" security="none"/>
    <security:http pattern="/home/handleLogin" security="none"/>
    <security:http pattern="/admin/login" security="none"/>


    <security:http pattern="/admin/**" authentication-manager-ref="AdminAuthentication">
        <security:intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')"/>
        <security:form-login login-page="/admin/login" login-processing-url="/admin/adminLogin"/>
        <security:csrf disabled="true"/>
    </security:http>

    <security:http pattern="/**" authentication-manager-ref="UserAuthentication">
        <security:intercept-url pattern="/**" access="hasRole('ROLE_USER') or hasRole('ROLE_ADMIN')"/>
        <security:form-login login-page="/home/login" login-processing-url="/login" always-use-default-target="true"/>
        <security:csrf disabled="true"/>
    </security:http>

    <security:authentication-manager alias="UserAuthentication">
        <security:authentication-provider user-service-ref="myUserDetailsService">
        </security:authentication-provider>
    </security:authentication-manager>

    <security:authentication-manager alias="AdminAuthentication">
        <security:authentication-provider user-service-ref="adminDetailService"/>
    </security:authentication-manager>




    <bean id="myUserDetailsService" class="org.k2.processmining.security.MyUserDetailService"/>

    <bean id="adminDetailService" class="org.k2.processmining.security.AdminDetailService"/>

    <bean id="CustomSuccessHandler" class="org.k2.processmining.security.CustomSuccessHandler"/>

</beans>