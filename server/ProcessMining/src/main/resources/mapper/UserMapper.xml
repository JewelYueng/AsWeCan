<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.k2.processmining.mapper.UserMapper">

    <update id="updateStateByUserId">
        UPDATE user SET state = #{state}
        WHERE
        id IN
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <insert id="save">
        INSERT INTO user(id,username,password,email,state)
        VALUE (#{id},#{name},#{password},#{email},#{state})
    </insert>

    <select id="listAllUsers" resultMap="user">
        SELECT * FROM user
    </select>

    <select id="getUserByUserId" resultType="user">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="getUserByEmail" resultType="user">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <select id="getUserByEmailAndPwd" resultType="user">
        SELECT * FROM user WHERE email = #{email} AND password = #{password}
    </select>

    <update id="updatePwdById">
        UPDATE user SET password = #{password} WHERE id = #{id}
    </update>

    <resultMap id="user" type="User">
        <id column="id" property="id"/>
        <result column="username" property="name"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="state" property="state"/>
    </resultMap>
</mapper>